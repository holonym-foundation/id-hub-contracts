import "hashes/blake2/blake2s" as leafHash;
// asserts that a leaf's preimage begins with a certain address and it was constructed from a previous leaf by modifying the secret
// called when adding a credential 
def main(u32[8] oldLeaf, u32[8] newLeaf, u32[5] address, private u32[4] oldNullifier, private u32[4] newNullifier, private u32[7] credsPart1, private u32[16] credsPart2) {
    u32[2][16] oldPreimage = [[...address, ...oldNullifier, ...credsPart1], credsPart2];
    u32[2][16] newPreimage = [[...address, ...newNullifier, ...credsPart1], credsPart2];
    assert(leafHash(oldPreimage) == oldLeaf);
    assert(leafHash(newPreimage) == newLeaf);
    return;
}